{
  "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "version": "1.0.0",
  "id": "00000000-0000-0000-0000-000000000000",
  "packageName": "com.yourcompany.newteamsapp",
  "developer": {
    "name": "Your Company",
    "websiteUrl": "https://yourcompany.com",
    "privacyUrl": "https://yourcompany.com/privacy",
    "termsOfUseUrl": "https://yourcompany.com/terms"
  },
  "name": {
    "short": "Attendance - ACS(A)",
    "full": "Attendance - ACS(A)"
  },
  "description": {
    "short": "Attendance tracking app",
    "full": "Attendance - ACS(A) - A Microsoft Teams app for attendance tracking with Dataverse integration"
  },
  "icons": {
    "outline": "icon-outline.png",
    "color": "icon-color.png"
  },
  "accentColor": "#0078D4",
  "staticTabs": [
    {
      "entityId": "main",
      "name": "Main",
      "contentUrl": "https://your-app-url.azurestaticapps.net/index.html",
      "websiteUrl": "https://your-app-url.azurestaticapps.net/index.html",
      "scopes": ["personal"]
    }
  ],
  "permissions": [
    "identity"
  ],
  "validDomains": [
    "*.azurestaticapps.net",
    "*.netlify.app",
    "yourcompany.com"
  ],
  "webApplicationInfo": {
    "id": "00000000-0000-0000-0000-000000000000",
    "resource": "api://your-app-url.azurestaticapps.net/00000000-0000-0000-0000-000000000000"
  }
